{
  "databaseChangeLog": [
    {
      "changeSet": {
        "id": "2-create-order-item-table",
        "author": "qodo",
        "changes": [
          {
            "createTable": {
              "tableName": "order_item",
              "columns": [
                {
                  "column": {
                    "name": "id",
                    "type": "BIGINT",
                    "autoIncrement": true,
                    "constraints": {
                      "primaryKey": true,
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "product_id",
                    "type": "BIGINT",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "price_per_unit",
                    "type": "DECIMAL(19,2)"
                  }
                },
                {
                  "column": {
                    "name": "quantity",
                    "type": "INTEGER"
                  }
                },
                {
                  "column": {
                    "name": "order_id",
                    "type": "BIGINT",
                    "constraints": {
                      "nullable": false
                    }
                  }
                }
              ]
            }
          },
          {
            "addForeignKeyConstraint": {
              "baseTableName": "order_item",
              "baseColumnNames": "order_id",
              "referencedTableName": "orders",
              "referencedColumnNames": "id",
              "constraintName": "fk_orderitem_order"
            }
          }
        ]
      }
    }
  ]
}
